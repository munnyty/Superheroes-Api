.PHONY: install test test-detailed help


install:
		python -m pip install -r requirements.txt

test:
		python -m pytest

test-detailed:
		python -m pytest -v -s

help:
	@echo "Available commands:"
	@echo "  install       - Install dependencies"
	@echo "  test          - Run all tests"
	@echo "  test-detailed - Tests with detailed output"







